@model vroom.Models.ViewModels.ModelViewModel
@using vroom.Extensions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit model of Vehicle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <input hidden asp-for="Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-2">
                    <label asp-for="Makes" class="control-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Model.MakeId" asp-items="Model.Makes.ToSelectListItems()" class="form-control"></select>
                    <span asp-validation-for="Model.Make" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Model.Name" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Model.Name" class="form-control" />
                    <span asp-validation-for="Model.Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

