<td class="text-right">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model">Edit</a>
        <form method="post" asp-action="Delete">
            <input onclick="if (!confirm('Are you sure you want to delete this item')){return false}" type="submit" value="Delete" class="btn btn-danger rounded" asp-route-id="@Model" asp-action="Delete" />
        </form>
    </div>
</td>